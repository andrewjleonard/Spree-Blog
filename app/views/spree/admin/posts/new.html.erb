<% content_for :page_title do %>
  <%= Spree.t(:new_post) %>
<% end %>

<div data-hook="admin_post_new_form_header">
  <%= render 'spree/shared/error_messages', target: @handbag %>
</div>

<div data-hook="admin_post_new_form">
  <%= form_for [:admin, @post], html: { multipart: true } do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= render 'form', f: f %>
        <%= render 'spree/admin/shared/new_resource_links' %>
      </div>
    </div>
  <% end %>
</div>
