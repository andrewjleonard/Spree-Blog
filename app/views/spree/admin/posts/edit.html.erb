<% content_for :page_title do %>
  <%= Spree.t(:editing_post) %> ID: <%= @post.id %>

<% end %>

<div data-hook="admin_post_edit_form_header">
  <%= render 'spree/shared/error_messages', target: @post %>
</div>

<div data-hook="admin_post_edit_form">
  <%= form_for [:admin, @post] do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= render 'form', f: f %>
        <%= render 'spree/admin/shared/edit_resource_links' %>
      </div>
    </div>
  <% end %>
</div>
